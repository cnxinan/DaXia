@model KCPS.WebComAdmin.ManageSchoolVM
@using KCPS.WebFrameWork

<!--内容-开始-->
<div id="RightContainer">
    <!--当前-开始-->
    <div class="CtrlDiv">
        <div class="left"><b>系统管理</b> >> 学校管理</div>
        <div class="right">
            <a class="addBtn addDefault" href="@SiteUrls.Instance.M_SchoolAddAndEdit()">添加学校</a>
            <a href="javascript:;" onclick="location.replace(location.href);" class="refreshBtn refreshDefault" style="margin-right: 0px;">刷新本页</a>
        </div>
        <div class="clearboth"></div>
    </div>
    <!--当前-结束-->
    <!--筛选-开始-->
    <div class="FilterDiv">
        <table class="fTable" cellspacing="0">
            <tr>
                <td class="itemTD">学校名称：</td>
                <td class="itemSP">
                    
                </td> 
                <td>
                    <input type="button" value="搜 索" id="SearchBtn" class="searchBtn searchDefault" onclick="Search()" />
                </td>               
            </tr>            
        </table>        
    </div>
    <!--筛选-结束-->
    <div class="DataDiv">
        <div class="div100 m10">
            <table class="dataTable" cellspacing="1">
                <thead>
                    <tr>
                        <th style="width: 40px;">序号</th>
                        <th style="width: 80px;">学校名称</th>
                        <th style="width: 150px;">学校地址</th>
                        <th style="width: 100px;">创建时间</th>
                        <th style="width: 80px;">操作</th>
                    </tr>
                </thead>
                <tbody>
                    @{int serialNo = 0;}
                    @foreach (var school in Model.itemList)
                    {
                        serialNo++;  
                        <tr>
                            <td>@serialNo</td>
                            <td>@school.Name</td>
                            <td>@school.Address</td>
                            <td>@school.CreateTime</td>
                            <td>
                                <a href="javascript:UnLock('@school.ID')" class="AClass">删除</a>                                
                            </td>
                        </tr>           
                    }                     
                </tbody>
            </table>
        </div>
        @Html.Partial("PartialPaper",Model.page)
    </div>
</div>
<!--内容-结束-->
