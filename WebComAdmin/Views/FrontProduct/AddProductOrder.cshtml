@{
    Layout = null;
}
@model KCPS.WebComAdmin.Front.ProductOrderVM
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>购物订单</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="format-detection" content="telephone=no">
    <meta http-equiv="Expires" content="-1">
    <meta http-equiv="Cache-Control" content="no-cache">
    <meta http-equiv="Pragma" content="no-cache">
    <link rel="stylesheet" href="/css/front/common.css" />
    <link rel="stylesheet" href="/css/front/style.css" />
</head>
<body>
    <!-- viewport -->
    <div class="viewport">
        <!-- headerTop -->
        <div class="headerTop">
            <a href="javascript:history.go(-1);"><span class="return">返回</span></a>购物订单
        </div>
        <!-- end headerTop -->
        <!-- newAddress -->
        <div class="newAddress">
            <ul>
                <li>
                    <label>产品名称</label>
                    <input type="text" name="receiverName" id="receiverName"  value="@Model.productName" readonly="readonly">
                </li>
                <li>
                    <label>订单号</label>
                    <input type="text" name="receiverName" id="receiverName" value="@Model.orderNo" readonly="readonly" />
                </li>
                <li>
                    <label>产品单价</label>
                    <input type="text" name="mobile" id="mobile" value="@Model.price" readonly="readonly" />
                </li>
                <li>
                    <label>购买数量</label>
                    <input type="text" name="province" id="province" value="@Model.count" readonly="readonly" />
                </li>
                <li>
                    <label>总价</label>
                    <input type="text" name="province" id="province" value="@Model.amount" readonly="readonly" />
                </li>
                <li>
                    <label>收货人</label>
                    <input type="text" name="address" id="address" value="@Model.reciver" readonly="readonly" />
                </li>
                <li>
                    <label>手机号码</label>
                    <input type="text" name="zipcode" id="zipcode" value="@Model.mobile" readonly="readonly" />
                </li>
                <li>
                    <label>收货地址</label>
                    <input type="text" name="zipcode" id="zipcode" value="@Model.address" readonly="readonly" />
                </li>
            </ul>
            <button class="submit active" onclick="add()">立即支付</button>
        </div>
        <!-- end newAddress -->
        <form id="bugForm" method="post" action="/FrontPerson/Recharge/">
            <input type="hidden" id="amount" name="amount" />
            <input type="hidden" id="orderNo" name="orderNo" />
            <input type="hidden" id="type" name="type" value="payforbuy" />
        </form>
    </div>
    <!-- end viewport -->
    <script src="/Scripts/js/zepto.js"></script>
    <script type="text/javascript">
        function add() {
            $('#amount').val('@Model.amount');
            $('#orderNo').val('@Model.orderNo');
            $("#bugForm").submit();
        }
    </script>
</body>
</html>

