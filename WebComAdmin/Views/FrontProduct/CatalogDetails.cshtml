@{
    Layout = null;
}
@model KCPS.WebComAdmin.Front.CatalogDetailListVM

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>分类详情</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="format-detection" content="telephone=no">
    <meta http-equiv="Expires" content="-1">
    <meta http-equiv="Cache-Control" content="no-cache">
    <meta http-equiv="Pragma" content="no-cache">
    <link rel="stylesheet" href="/css/front/common.css" />
    <link rel="stylesheet" href="/css/front/style.css" />
</head>
<body>
    <!-- viewport -->
    <div class="viewport">
        <!-- headerTop -->
        <div class="headerTop">
            <a href="javascript:history.go(-1);"><span class="return">返回</span></a>全部礼品
        </div>
        <!-- end headerTop -->
        <!-- productTop -->
        <div class="productTop">
            <ul class="clearfix">
                <li class="active">即将揭晓</li>
                <li>人气</li>
                <li>最新</li>
                <li class="last">价格</li>
            </ul>
            <div class="productBottom">
                <div class="productCont" style="display:block;">
                    @foreach (var item in Model.processingList)
                    {
                        <div class="boxProduct clearfix">
                            <div class="product clearfix">
                                <a href="/FrontProduct/Product?id=@item.productId">
                                    <div class="productImg"><img src="@item.image"></div>
                                    <p>@item.name<br>随机发货</p>
                                </a>
                            </div>
                            <span class="cart"></span>
                            <div class="number">
                                <div class="strip">
                                    <span class="strip-color" style="width:@item.processedPercent;"></span>
                                </div>
                                <span class="textleft">已参与：@item.haveActNumbers</span>
                                <span>总需人次：@item.actNumbers</span>
                                <span class="textright">剩余：@item.remainActNumbers</span>
                            </div>
                        </div>
                    }
                </div>
                <div class="productCont">
                    @foreach (var item in Model.mostBookMarkList)
                    {
                        <div class="boxProduct clearfix">
                            <div class="product clearfix">
                                <a href="/FrontProduct/Product?id=@item.productId">
                                    <div class="productImg"><img src="@item.image"></div>
                                    <p>@item.name<br>随机发货</p>
                                </a>
                            </div>
                            <span class="cart"></span>
                            <div class="number">
                                <div class="strip">
                                    <span class="strip-color" style="width:@item.processedPercent;"></span>
                                </div>
                                <span class="textleft">已参与：@item.haveActNumbers</span>
                                <span>总需人次：@item.actNumbers</span>
                                <span class="textright">剩余：@item.remainActNumbers</span>
                            </div>
                        </div>
                    }
                </div>
                <div class="productCont">
                    @foreach (var item in Model.newestList)
                    {
                        <div class="boxProduct clearfix">
                            <div class="product clearfix">
                                <a href="/FrontProduct/Product?id=@item.productId">
                                    <div class="productImg"><img src="@item.image"></div>
                                    <p>@item.name<br>随机发货</p>
                                </a>
                            </div>
                            <span class="cart"></span>
                            <div class="number">
                                <div class="strip">
                                    <span class="strip-color" style="width:@item.processedPercent;"></span>
                                </div>
                                <span class="textleft">已参与：@item.haveActNumbers</span>
                                <span>总需人次：@item.actNumbers</span>
                                <span class="textright">剩余：@item.remainActNumbers</span>
                            </div>
                        </div>
                    }
                </div>
                <div class="productCont">
                    @foreach (var item in Model.priceList)
                    {
                        <div class="boxProduct clearfix">
                            <div class="product clearfix">
                                <a href="/FrontProduct/Product?id=@item.productId">
                                    <div class="productImg"><img src="@item.image"></div>
                                    <p>@item.name<br>随机发货</p>
                                </a>
                            </div>
                            <span class="cart"></span>
                            <div class="number">
                                <div class="strip">
                                    <span class="strip-color" style="width:@item.processedPercent;"></span>
                                </div>
                                <span class="textleft">已参与：@item.haveActNumbers</span>
                                <span>总需人次：@item.actNumbers</span>
                                <span class="textright">剩余：@item.remainActNumbers</span>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <!-- end productTop -->
    </div>
    <!-- footer -->
    @Html.Partial("_FrontBottom", 1)
    <!-- end footer -->
    <!-- end viewport -->
    <script src="/Scripts/js/zepto.js"></script>
    <script src="/Scripts/js/gmu.js"></script>
    <script src="/Scripts/js/slide-touch.js"></script>
</body>
</html>
